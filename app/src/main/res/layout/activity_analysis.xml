<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C7CCF"
    tools:context=".Analysis">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:orientation="horizontal"
                    android:id="@+id/idTopLayout">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/cc1"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_marginTop="15dp"
                       android:layout_marginHorizontal="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Categorgy Wise Expense Report"
                            android:textSize="30dp"
                            android:textColor="#000000"
                            android:layout_marginTop="15dp"
                            android:layout_marginHorizontal="20dp"
                            android:textAlignment="center"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id = "@+id/PieChart1"
                            android:layout_width = "fill_parent"
                            android:layout_height = "fill_parent"
                            android:layout_marginVertical="25dp"
                            android:layout_marginHorizontal="15dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cc2"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_below="@+id/cc"
                        app:cardElevation="8dp"

                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Annual Expense Report"
                            android:textSize="30dp"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="20dp"
                            android:textAlignment="center"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id = "@+id/PieChart2"
                            android:layout_marginVertical="25dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width = "fill_parent"
                            android:layout_height = "fill_parent" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cc3"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        app:cardElevation="8dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@+id/cc2"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Annual Inncome Report"
                            android:layout_marginTop="15dp"
                            android:textSize="30dp"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="20dp"
                            android:textAlignment="center"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id = "@+id/PieChart3"
                            android:layout_marginVertical="25dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width = "fill_parent"
                            android:layout_height = "fill_parent" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cc4"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        app:cardElevation="8dp"
                        android:layout_below="@+id/cc3"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Annual Savings Report"
                            android:textSize="30dp"
                            android:layout_marginTop="15dp"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="20dp"
                            android:textAlignment="center"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id = "@+id/PieChart4"
                            android:layout_marginVertical="25dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width = "fill_parent"
                            android:layout_height = "fill_parent" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cc5"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        app:cardElevation="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/cc4"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Category Wise Savings Report"
                            android:layout_marginTop="15dp"
                            android:textSize="30dp"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="20dp"
                            android:textAlignment="center"/>
                        <com.github.mikephil.charting.charts.PieChart
                            android:id = "@+id/PieChart5"
                            android:layout_marginVertical="25dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width = "fill_parent"
                            android:layout_height = "fill_parent" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>